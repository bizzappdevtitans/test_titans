<odoo>
    <!-- inherited sale order view T-00419-->
    <record id="sale_order_form_view_extension" model="ir.ui.view">
        <field name="name">sale_order_extension</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_open_book"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-book"
                    attrs="{'invisible': [('book_shelf_count', '=', 0)]}"
                >
                            <field
                        name="book_shelf_count"
                        widget="statinfo"
                        string="Book Shelf"
                    />
                        </button>
            </xpath>
        </field>
    </record>
</odoo>
