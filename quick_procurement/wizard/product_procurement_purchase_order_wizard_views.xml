<odoo>
    <!-- Form view of wizard #T00466 -->
    <record id="product_procurement_purchase_order_form_view" model="ir.ui.view">
        <field name="name">product.procurement.purchase.order.wizard.form</field>
        <field name="model">product.procurement.purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id" />
                    <field name="scheduled_date" string="Scheduled Date" />
                </group>
                <footer>
                    <button
                        name="create_purchase_order_from_product"
                        string="Create purchase order"
                        type="object"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Discard" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
    <!-- window action of wizard #T00466-->
    <record
        id="action_create_purchase_order_from_product"
        model="ir.actions.act_window"
    >
        <field name="name">Quick Procurement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.procurement.purchase.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
