<odoo>
    <record id="product_product_inherited_form_view" model="ir.ui.view">
        <field name="name">product.product.inherited.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
                <xpath expr="/form/header" position="inside">
                        <button type="object" name="quick_procurement" string="Quick Procurement" class="btn-primary"/>
                </xpath>
        </field>
    </record>
</odoo>
